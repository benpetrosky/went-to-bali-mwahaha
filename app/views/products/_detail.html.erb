<div id="detail_div">




<h1><%= link_to @product.name, products_path%>
</h1>
<h2>Description: <%= @product.description %></h2>
<h3>Price: <%= number_to_currency @product.price %></h3>



<%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>


<% if current_user.admin && current_user %>
   <p><%= link_to "Delete", product_path(@product),
   :data => {:confirm => "You sure?",
     :method => "delete"} %></p>
<div>


     <%= form_for @product do |f| %>
       Name: <%= f.text_field :name %>
       Description: <%= f.text_field :description %>
       Price: <%= f.number_field :price, step: 0.01 %>
     <%= f.submit "Update the product" %>

   <% end %>
   </div>

 <% end %>
 </div>
